:80 {
    # Root directory for the site
    root * /var/www/public

    # Route requests for PHP files to the PHP container
    php_fastcgi booxit-backend-php:9000

    # Enable file server for static files
    file_server

    try_files {path} /index.php

    # Optional: log requests (useful for debugging)
    log {
        output stdout
        format console
    }

    # Optional: Enable gzip compression
    encode gzip
}